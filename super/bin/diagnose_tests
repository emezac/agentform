#!/usr/bin/env ruby
# frozen_string_literal: true

puts "ğŸ” SuperAgent Test Diagnostics"
puts "=" * 40

# Check Ruby version
puts "Ruby version: #{RUBY_VERSION}"
puts "Ruby engine: #{RUBY_ENGINE}" if defined?(RUBY_ENGINE)

# Check if we can load SuperAgent
begin
  require_relative '../lib/super_agent'
  puts "âœ… SuperAgent loads successfully"
  puts "   Version: #{SuperAgent::VERSION}"
rescue => e
  puts "âŒ Error loading SuperAgent: #{e.message}"
  exit 1
end

# Check configuration
begin
  SuperAgent.configure do |config|
    config.llm_provider = :openai
    config.openai_api_key = 'test-key'
    config.default_llm_model = 'gpt-4'
  end
  puts "âœ… Configuration works"
rescue => e
  puts "âŒ Configuration error: #{e.message}"
end

# Check if we can create basic objects
begin
  context = SuperAgent::Workflow::Context.new(test: 'value')
  puts "âœ… Context creation works"
  puts "   Test value: #{context.get(:test)}"
rescue => e
  puts "âŒ Context creation error: #{e.message}"
end

# Check workflow definition
begin
  workflow = Class.new(SuperAgent::WorkflowDefinition) do
    workflow do
      task :test_task do
        process { "test result" }
      end
    end
  end
  puts "âœ… Workflow definition works"
  puts "   Steps count: #{workflow.all_steps.size}"
rescue => e
  puts "âŒ Workflow definition error: #{e.message}"
end

# Check workflow engine
begin
  engine = SuperAgent::WorkflowEngine.new
  puts "âœ… Workflow engine creation works"
rescue => e
  puts "âŒ Workflow engine error: #{e.message}"
end

# Check dependencies
dependencies = {
  'openai' => 'OpenAI gem',
  'zeitwerk' => 'Zeitwerk autoloader',
  'dry-struct' => 'Dry-struct',
  'active_support' => 'ActiveSupport',
  'active_job' => 'ActiveJob'
}

dependencies.each do |gem, description|
  begin
    require gem
    puts "âœ… #{description} available"
  rescue LoadError
    puts "âš ï¸  #{description} not available (#{gem})"
  end
end

# Check optional dependencies
optional_deps = {
  'open_router' => 'OpenRouter gem',
  'pundit' => 'Pundit authorization'
}

# Rails-specific dependencies (check carefully)
rails_deps = {
  'turbo-rails' => 'Turbo Rails',
  'ruby-anthropic' => 'Anthropic gem'
}

optional_deps.each do |gem, description|
  begin
    require gem
    puts "âœ… #{description} available (optional)"
  rescue LoadError
    puts "â„¹ï¸  #{description} not available (optional)"
  end
end

puts "\nChecking Rails-specific dependencies..."
rails_deps.each do |gem, description|
  begin
    # Try to require without causing initialization issues
    if gem == 'turbo-rails'
      # Don't actually require turbo-rails as it needs full Rails
      puts "â„¹ï¸  #{description} skipped (requires Rails environment)"
    else
      require gem
      puts "âœ… #{description} available (optional)"
    end
  rescue LoadError
    puts "â„¹ï¸  #{description} not available (optional)"
  rescue => e
    puts "âš ï¸  #{description} - #{e.message}"
  end
end

puts "\nğŸ¯ Diagnosis Summary:"
puts "Ready to run tests!"

# Test a simple workflow execution
begin
  puts "\nğŸ§ª Testing simple workflow execution..."
  
  test_workflow = Class.new(SuperAgent::WorkflowDefinition) do
    workflow do
      task :simple_test do
        process { { result: "success", timestamp: Time.now.to_i } }
      end
    end
  end
  
  context = SuperAgent::Workflow::Context.new(input: "test")
  engine = SuperAgent::WorkflowEngine.new
  result = engine.execute(test_workflow, context)
  
  if result.completed?
    puts "âœ… Simple workflow execution successful!"
    puts "   Output: #{result.final_output}"
  else
    puts "âŒ Simple workflow failed: #{result.error_message}"
  end
rescue => e
  puts "âŒ Workflow execution error: #{e.message}"
  puts "   Backtrace: #{e.backtrace.first(3).join("\n   ")}"
end

puts "\nğŸš€ Run tests with: bundle exec rspec"
