#!/usr/bin/env bash
set -euo pipefail

echo "üß™ Running SuperAgent Test Suite"
echo "================================"

# Check if bundle is available
if ! command -v bundle &> /dev/null; then
    echo "‚ùå Bundler not found. Please install bundler first:"
    echo "   gem install bundler"
    exit 1
fi

# Install dependencies if needed
if [ ! -d "vendor/bundle" ] && [ ! -f "Gemfile.lock" ]; then
    echo "üì¶ Installing dependencies..."
    bundle install
fi

# Set test environment
export RAILS_ENV=test
export SUPER_AGENT_ENV=test

# Run tests with proper configuration
echo "üöÄ Starting test execution..."

# Run specific test files to avoid problematic ones initially
echo "Running core functionality tests..."
bundle exec rspec spec/super_agent/workflow_definition_spec.rb --format documentation

echo "Running context tests..."
bundle exec rspec spec/super_agent/workflow/context_spec.rb --format documentation

echo "Running helpers tests..."
bundle exec rspec spec/super_agent/workflow_helpers_spec.rb --format documentation

echo "Running LLM interface tests..."
bundle exec rspec spec/super_agent/llm_interface_spec.rb --format documentation

echo "Running integration tests..."
bundle exec rspec spec/integration/super_agent_integration_spec.rb --format documentation

echo "‚úÖ Test suite completed!"

# Optional: Run all tests if everything passes
read -p "Run all tests? (y/N): " -n 1 -r
echo
if [[ $REPLY =~ ^[Yy]$ ]]; then
    echo "üîç Running full test suite..."
    bundle exec rspec --format documentation
fi
